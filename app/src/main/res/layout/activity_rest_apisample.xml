<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="youngjee.com.examapp01.RestAPISampleActivity">


    <TextView android:text="latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvLatitude"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:id="@+id/lon"
        android:layout_marginRight="62dp"
        android:layout_toEndOf="@+id/tvLatitude"
        />


    <TextView android:text="longtitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvLongtitude"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tvLatitude"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:id="@+id/lat"
        android:layout_marginRight="62dp"
        android:layout_alignBottom="@+id/tvLongtitude"
        android:layout_toEndOf="@+id/tvLongtitude"
        android:layout_marginStart="36dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getWeather"
        android:id="@+id/getWeatherBtn"
        android:onClick="getWeather"
        android:layout_below="@+id/tvLongtitude"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:id="@+id/temp"
        android:layout_below="@+id/getWeatherBtn"
        android:layout_marginTop="40dp"
        />

</RelativeLayout>
