<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="youngjee.com.examapp01.ArrayList2Activity">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/idList"
        android:layout_weight="1"/>


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idEdit"
        android:hint="ADD CONTENT!!"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/idBtn"
        android:layout_toStartOf="@+id/idBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add data"
        android:id="@+id/idBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/idList"
        android:layout_alignEnd="@+id/idList" />
</RelativeLayout>
